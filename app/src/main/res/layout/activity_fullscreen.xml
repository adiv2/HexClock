<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buzz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#900099dd"
    tools:context="com.apps.aditya.hc0.Buzz">

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/min"
        android:layout_alignParentEnd="true"
        android:id="@+id/sec"
        android:textSize="13pt"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_button"
        android:backgroundTint="@android:color/black"
        android:onClick="exitApp3"/>

    <TextView
        android:text="Wake UP!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:id="@+id/dtext"
        android:layout_below="@+id/min"
        android:layout_centerHorizontal="true"
        android:textSize="36pt"/>

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/min"
        android:textSize="13pt"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_button"
        android:backgroundTint="@android:color/black"
        android:onClick="exitApp2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"/>

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hour"
        android:textSize="13pt"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_button"
        android:backgroundTint="@android:color/black"
        android:onClick="exitApp1"
        android:layout_above="@+id/dtext"
        android:layout_alignParentStart="true"/>


    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="0sp"
        android:background="#00000000"
        android:textStyle="bold"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/dummy_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="0pt"
                android:layout_weight="1"
                android:text=""
                android:visibility="invisible"/>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>




    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

